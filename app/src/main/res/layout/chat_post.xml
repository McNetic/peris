<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="horizontal" >
    
    <FrameLayout 
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:layout_marginRight="6dp" >
     
		<ImageView 
			android:id="@+id/chat_avatar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/no_avatar"
			android:layout_gravity="center_vertical" />
	     
		<ImageView 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/avatar_frame"
			android:id="@+id/chat_avatar_frame"
			android:layout_gravity="center_vertical" />
	        
	</FrameLayout>
	
    <ImageView 
		android:id="@+id/chat_ting"
		android:layout_width="16dp"
		android:layout_height="16dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ting_them"
		android:layout_gravity="top" />
	
    <LinearLayout 
        android:layout_width="0dp"
		android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:id="@+id/chat_background"
        android:orientation="vertical"
        >
		
        <LinearLayout 
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:layout_margin="6dp"
	        android:orientation="vertical"
	        >
			
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="post body"
	            android:id="@+id/chat_post_body"
	            android:textSize="16sp"
	            />
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="post author"
	            android:id="@+id/chat_post_author"
	            android:alpha=".6"
	            android:textStyle="bold"
	            />
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="post timestamp"
	            android:fontFamily="sans-serif-condensed"
	            android:id="@+id/chat_post_timestamp"
	            android:alpha=".6"
	            />
	        
		</LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
