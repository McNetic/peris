<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#333333"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
     <ImageView
        android:id="@+id/aana_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/android_download_button"  />
     
	<LinearLayout
		android:orientation="vertical"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:paddingLeft="6dp"
	    android:paddingRight="6dp"
	    android:paddingBottom="2dp"
	     >
	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:id="@+id/aana_app_name"
	        android:text="App Name"
	        android:gravity="center_vertical"
	        android:fontFamily="sans-serif-thin"
	        android:textColor="#ffffff"
	        android:textSize="17sp"

	        />
	    
	    <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
	        
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="FREE"
		        android:textColor="#a4c739"
		        android:id="@+id/aana_app_price"
		        android:textStyle="bold"
		        android:textSize="14sp"
		        />
	        
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:text="on Google Play."
		        android:id="@+id/aana_app_store"
		        android:textColor="#ffffff"
		        android:fontFamily="sans-serif-thin"
		        android:textSize="14sp"
		        />
	        
	    </LinearLayout>
	    
	</LinearLayout>
     
     <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aana_download_button"
        android:src="@drawable/android_download_button"  />
    

</LinearLayout>
