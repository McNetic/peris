<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:id="@+id/ll_border_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_color_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/category_subforum_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_avatar" />

                <ImageView
                    android:id="@+id/category_subforum_indicator_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_frame" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Thread Subject"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/category_last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:alpha=".5"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="Last Post"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_last_thread"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha=".5"
                        android:maxLines="1"
                        android:text="Thread Author"
                        android:textSize="12sp" />


                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/view_indicator" />


                    <TextView
                        android:id="@+id/thread_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:alpha=".5"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLines="1"
                        android:text="0"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reply_indicator" />


                    <TextView
                        android:id="@+id/thread_replies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".5"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLines="1"
                        android:text="5"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
