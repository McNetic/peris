<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/chat_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#331c8ca8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_post_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="post body"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/chat_post_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha=".6"
                    android:text="post author"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chat_post_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha=".6"
                    android:fontFamily="sans-serif-condensed"
                    android:text="post timestamp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/chat_ting"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/ting_you" />

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="6dp">

            <ImageView
                android:id="@+id/chat_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/no_avatar" />

            <ImageView
                android:id="@+id/chat_avatar_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_frame" />

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
